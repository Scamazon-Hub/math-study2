    <script>
        const chartTooltipCallback = {
            plugins: {
                tooltip: {
                    callbacks: {
                        title: function(tooltipItems) {
                            const item = tooltipItems[0];
                            let label = item.chart.data.labels[item.dataIndex];
                            if (Array.isArray(label)) {
                                return label.join(' ');
                            } else {
                                return label;
                            }
                        }
                    }
                }
            }
        };

        const generateScatterData = (numPoints, r, startX, startY, rangeX, rangeY) => {
            const data = [];
            for (let i = 0; i < numPoints; i++) {
                const x = startX + Math.random() * rangeX;
                const noise = (Math.random() - 0.5) * rangeY * (1 - Math.abs(r));
                const y = startY + (rangeY / rangeX) * r * (x - startX) + noise;
                data.push({ x, y });
            }
            return data;
        };

        const positiveData = generateScatterData(50, 0.9, 0, 0, 100, 100);
        const noData = generateScatterData(50, 0.05, 0, 0, 100, 100);
        const negativeData = generateScatterData(50, -0.9, 0, 100, 100, -100);
        const regressionData = generateScatterData(40, 0.8, 10, 20, 80, 60);

        new Chart(document.getElementById('positiveCorrelationChart'), {
            type: 'scatter',
            data: {
                datasets: [{
                    label: 'Positive Correlation Data',
                    data: positiveData,
                    backgroundColor: '#0079FF',
                    pointRadius: 5,
                    pointHoverRadius: 7,
                }]
            },
            options: { ...chartTooltipCallback, responsive: true, maintainAspectRatio: false, scales: { x: { title: { display: true, text: 'Variable 1' } }, y: { title: { display: true, text: 'Variable 2' } } } }
        });
        
        new Chart(document.getElementById('noCorrelationChart'), {
            type: 'scatter',
            data: {
                datasets: [{
                    label: 'No Correlation Data',
                    data: noData,
                    backgroundColor: '#52AFFF',
                    pointRadius: 5,
                    pointHoverRadius: 7,
                }]
            },
            options: { ...chartTooltipCallback, responsive: true, maintainAspectRatio: false, scales: { x: { title: { display: true, text: 'Variable 1' } }, y: { title: { display: true, text: 'Variable 2' } } } }
        });

        new Chart(document.getElementById('negativeCorrelationChart'), {
            type: 'scatter',
            data: {
                datasets: [{
                    label: 'Negative Correlation Data',
                    data: negativeData,
                    backgroundColor: '#0079FF',
                    pointRadius: 5,
                    pointHoverRadius: 7,
                }]
            },
            options: { ...chartTooltipCallback, responsive: true, maintainAspectRatio: false, scales: { x: { title: { display: true, text: 'Variable 1' } }, y: { title: { display: true, text: 'Variable 2' } } } }
        });
        
        const regressionLineData = [{x: 10, y: 25}, {x: 90, y: 75}];

        new Chart(document.getElementById('regressionLineChart'), {
            data: {
                datasets: [{
                    type: 'scatter',
                    label: 'Data Points',
                    data: regressionData,
                    backgroundColor: '#52AFFF',
                    pointRadius: 6,
                    pointHoverRadius: 8
                }, {
                    type: 'line',
                    label: 'Line of Best Fit',
                    data: regressionLineData,
                    borderColor: '#004AAD',
                    borderWidth: 3,
                    fill: false,
                    tension: 0,
                    pointRadius: 0
                }]
            },
            options: { ...chartTooltipCallback, responsive: true, maintainAspectRatio: false, scales: { x: { title: { display: true, text: 'Hours Studied' }, min: 0, max: 100 }, y: { title: { display: true, text: 'Exam Score' }, min: 0, max: 100 } } }
        });
    </script>
